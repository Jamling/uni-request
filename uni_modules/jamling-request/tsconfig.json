{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "declaration": true,
    "declarationDir": "types",
    "outDir": "dist",
    "rootDir": "js_sdk",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "types": ["@dcloudio/types"]
  },
  "include": ["js_sdk/**/*"]
}
